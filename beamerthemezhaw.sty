\setbeamertemplate{part page}{
  \begingroup
  \setbeamercolor{background canvas}{fg=white,bg=ZHAWblue}
  \setbeamertemplate{footline}{}
  
  \begin{frame}
    \vspace{15mm}
    \usebeamercolor{title}\usebeamercolor[fg]{title}
    \usebeamerfont{title}\inserttitle\\[5mm]
    \LARGE Teil~\insertpartnumber\\
    \usebeamerfont{part}\insertpart\\[5mm]
    \usebeamerfont{date}\insertdate\\[17mm]
    \usebeamerfont{author}\parbox{20mm}{\raggedright\insertauthor}
  \end{frame}
\endgroup
}

\AtBeginPart{
  \partpage
}

